{
  "extends": [
    "config:base"
  ],
  "kubernetes": {
    "fileMatch": ["^system-components/overlays/.+\\.yaml$"]
  },
  "reviewers": ["suzuki-shunsuke"],
  "packageRules": [
    {
      "managers": ["kustomize", "kubernetes", "helmfile"],
      "updateTypes": ["minor", "patch", "pin"],
      "additionalBranchPrefix": "{{baseDir}}-",
      "commitMessageSuffix": "({{baseDir}})"
    },
    {
      "managers": ["kustomize", "kubernetes", "helmfile"],
      "updateTypes": ["minor", "patch", "pin"],
      "paths": ["system-components/overlays/*staging*/**"],
      "reviewers": [],
      "automerge": true
    },
    {
      "managers": ["helmfile"],
      "packageNames": ["velero"],
      "prBodyNotes": [
        "[compare](https://github.com/vmware-tanzu/helm-charts/compare/velero-{{currentVersion}}...velero-{{newVersion}})"
      ]
    }
  ]
}

